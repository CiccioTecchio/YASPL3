def fibonacci(in int n, inout int o){
	int t = 0;
	if(n==1 or n==2) then{
		t=1;
	}
	else{
		fibonacci(n-1,o);
		t = t + o;
		fibonacci(n-2,o);
		t = t + o;
	}
	o = t;
}

