int opt, n1, n2, res=0;

def somma (in int op1, in int op2, out int res){
    res = 0;
    res = op1 + op2;
}

def moltiplicazione (in int op1, in int op2, out int res){
    int i = 0;
    res = 0;
    while(i<op2)do{
        res = res + op1;
        i = i + 1;
    }
}

def potenza (in int b, in int e, out int res){
    int i = 1;
    res = 1;
    while(i<=e)do{
        res = res * b;
        i = i +1;
    }
}

def fibonacci(in int num){
  int i = 1, a = -1, b = 1;
  res = 0;
  while(i <= num)do{
      res = a + b;
      a = b;
      b = res;
      i = i + 1;
      res->;
  }
}

